<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/fullrounded_bg_white"
    android:layout_marginBottom="16dp"
    android:paddingEnd="16dp"
    tools:ignore="RtlSymmetry">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_news"
        android:layout_width="95dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="24dp"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_new_1"
            android:background="@drawable/fullrounded_bg_white"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteY="10dp"
            android:contentDescription="@string/app_name" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv_title_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/big_data"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:lines="2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toEndOf="@+id/cv_news"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginVertical="12dp"
        android:text="Why Big Data Needs Thick Data?"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title_news"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_news"
         />

</androidx.constraintlayout.widget.ConstraintLayout>